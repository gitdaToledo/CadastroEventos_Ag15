<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CadastroEventos.Views.Concluido"
             Title="Concluido"
              NavigationPage.HasNavigationBar="False">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="{StaticResource MidnightBlue}" Offset="0.3"/>
            <GradientStop Color="DeepPink" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>


    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Frame Margin="5"  BackgroundColor="{StaticResource Gray200}">
            <VerticalStackLayout  >
        <Label 
            Text="Contratação Concluida!"
            HorizontalTextAlignment="Center"
            TextColor="{StaticResource Primary}"
            FontSize="50"
            FontFamily="OldTTBold"/>

            <Button Text="VOLTAR" Clicked="Button_Clicked"/>
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>